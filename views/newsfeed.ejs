<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('_head', {title: 'Newsfeed'}) %>
  </head>
  <body onload="updateTimes()">

    <div class="row">
      <div class="column">
        <div id="header">
          <% include _logo.ejs %>
          <form action="/newsfeed" method="post">
            <textarea id="create-content" rows="6" maxlength="1000" name="postContent" placeholder="Write something you fool!"></textarea>
            <input type="submit" name="submit">
          </form>
        </div>

        <% include _posts.ejs %>

      </div>

      <div id="user-newsfeed" class="column">

        <h2><a href="/user/<%= loggedInUser %>"><%= userDetails.firstname + ' ' + userDetails.lastname %></a></h2>

        <% include _profile.ejs %>

      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.23.0/moment.min.js" type="text/javascript"></script>
    <script src="/js/updateTimes.js" type="text/javascript"></script>
  </body>
</html>
