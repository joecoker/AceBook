<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <meta charset="utf-8">
    <title>Acebook</title>
  </head>
  <body onload="updateTimes()">
    <h1><img src="/images/ace-of-spades.png" height="46" width="46" alt="">Acebook</h1>

    <div id="content">
      <div id="post" class="post">
        <div class="post-header">
          <span class="post-name">
            <a href="/user/<%= post.userid %>"><%= post.firstname + ' ' + post.lastname %></a></span> <span class="timeago" datetime="<%= moment(post.createdat).format(dateLongFormat) %>"><a href="/post/<%= post.postid %>"><%= moment(post.createdat).fromNow(); %></a></span>
        </div>
        <div class="post-content">
          <%= post.content %>
        </div>
      </div>
      <div class="likes-count">
          <% if (post.likecount === 1) { %>
          There is 1 like
          <% } else { %>
          There are <%= post.likecount %> likes
          <% } %>
          <a href="/post/like/<%= post.postid %>">
            <% if (post.liked) { %>
            Unlike
            <% } else { %>
            Like
            <% } %>
          </a>
      </div>
      <div id="comments-count">
        <% if (commentCount === 1) { %>
        There is 1 comment
        <% } else { %>
        There are <%= commentCount %> comments
        <% } %>
      </div>
      <div id="comments">
        <% comments.forEach(function(comment) { %>
          <div class="comment">
            <div class="comment-header">
              <span class="comment-name"><a href="/user/<%= comment.userid %>"><%= comment.firstname + ' ' + comment.lastname %></a></span> <span class="timeago comment-date" datetime="<%= moment(comment.createdat).format(dateLongFormat) %>"><%= moment(comment.createdat).fromNow(); %></span>
            </div>
            <div class="comment-body">
              <%= comment.content %>
            </div>
          </div>
        <% }) %>
      </div>
      <div id="comment-form">
        <form action="/comment/<%= post.postid %>" method="post">
          <textarea id="create-content" rows="6" maxlength="1000" name="commentContent" placeholder="Write something you fool!"></textarea>
          <input type="submit" value="submit">
        </form>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.23.0/moment.min.js" type="text/javascript"></script>
    <script src="/js/updateTimes.js" type="text/javascript"></script>
  </body>
</html>
